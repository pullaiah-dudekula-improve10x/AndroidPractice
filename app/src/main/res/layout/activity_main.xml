<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="14dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Buttons"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/toast_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Toast"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/custome_toast_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Custome Toast"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/togged_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Tagged Button"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/radio_button_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Radio Button"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/ratingbar_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Ratingbar"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/chechbox_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Checkbox"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/seekbar_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="seekbar"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/datepicker_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="DatePicker"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/time_picker_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Time Picker"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/progressbar_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Progressbar"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/vertical_scroll_view_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Vertical Scroll View"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/horizontal_sb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Horizontal Scrollbar"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/listview_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Listview"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/cutom_list_view_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Custom Listview"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/alert_dialg_box_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Alert Dialo Box"
                android:textAllCaps="false" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>